{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build page",
            "type": "shell",
            "command": "${config:python.pythonPath}",
            "args": [
                "cli.py",
                "build",
                "--target",
                "${workspaceFolder}/instance/build.html"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}